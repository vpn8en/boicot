---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<div
  class="w-full bg-no-repeat bg-cover bg-left"
  style="background-image: url(/assets/images/hero.png);">
  <main
    class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
    <div class="md:order-1 hidden md:block"></div>
    <div
      class="md:mx-0 lg:mx-10 lg:p-15 md:p-5"
      style="background-color: rgba(252,251,0,.5 );">
      <h1
        class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
        Quality Frame Bags
      </h1>
      <p class="text-lg mt-4 text-slate-600 max-w-xl">
        The ultimate storage for your cycling expeditions.
      </p>
      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <Link
          href="/contact"
          class="flex gap-1 items-center justify-center"
          rel="noopener">
          <Icon class="text-white w-5 h-5" name="icon-park-outline:order" />

          Custom Order
        </Link>
        <Link
          size="lg"
          style="outline"
          rel="noopener"
          href="/products"
          class="flex gap-1 items-center justify-center">
          <Icon class="text-black w-4 h-4" name="ic:round-shopping-cart" />
          Products
        </Link>
      </div>
    </div>
  </main>
</div>
